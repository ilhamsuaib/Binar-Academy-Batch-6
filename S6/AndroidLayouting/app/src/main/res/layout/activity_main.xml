<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="id.ilhamsuaib.androidlayouting.MainActivity">

    <ImageView
        android:id="@+id/img_backdrop"
        android:src="@drawable/img_backdrop"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/putih"
        android:layout_marginTop="16dp"
        android:src="@drawable/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_width="72dp"
        android:layout_height="72dp" />

    <TextView
        android:id="@+id/tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Ilham Suaib"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_display_name"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="\@ilhamsuaib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_backdrop" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tweets"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="400k"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Followers"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:text="500"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Following"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
